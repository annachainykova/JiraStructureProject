<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Main Group RUN" verbose="1" preserve-order="true" group-by-instances="true">
    <listeners>
        <listener class-name="Utils.Listeners.RetryListener"/>
        <listener class-name="Utils.Listeners.TestListener"/>
    </listeners>
    <test name="Amazon IAM Login Test" verbose="1" preserve-order="true" group-by-instances="true">
        <groups>
            <run>
                <include name="IAMSuccessLoginGroup"/>
            </run>
        </groups>
        <classes>
            <class name="Services.AWSAmazon.AmazonLoginTestCases"/>
        </classes>
    </test>
    <test name="Amazon Full Test Cases" verbose="1" preserve-order="true" group-by-instances="true">
        <groups>
            <run>
                <exclude name="FailureLoginGroup"/>
                <exclude name="IAMSuccessLoginGroup"/>
                <include name="SuccessLoginGroup"/>
                <include name="main"/>     <!-- All tests belong to main group (requested)-->
            </run>
        </groups>
        <classes>
            <class name="Services.AWSAmazon.AmazonLoginTestCases"/>
            <class name="Services.AWSAmazon.AmazonIAMTestCases"/>
            <class name="Services.AWSAmazon.AmazonS3TestCases"/>
        </classes>
    </test>
